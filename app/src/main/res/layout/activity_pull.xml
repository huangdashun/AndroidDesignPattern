<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <huangshun.it.com.androiddesignpattern.view.pull.PullLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/wel_splash" />
    </huangshun.it.com.androiddesignpattern.view.pull.PullLayout>

    <Button
        android:id="@+id/my_click"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:onClick="pleaseClick"
        android:text="点我"
        android:visibility="gone" />

    <huangshun.it.com.androiddesignpattern.view.pull.TransView
        android:id="@+id/my_transView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/black"
        android:visibility="gone" />

    <huangshun.it.com.androiddesignpattern.view.pull.ScrollerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_one"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/red"
            android:gravity="center"
            android:text="This is first child view" />

        <Button
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/green_1"
            android:gravity="center"
            android:text="This is second child view" />

        <Button
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/blue"
            android:gravity="center"
            android:text="This is third child view" />
    </huangshun.it.com.androiddesignpattern.view.pull.ScrollerLayout>
</LinearLayout>