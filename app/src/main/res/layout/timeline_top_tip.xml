<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_summary_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/view_bg"
                style="@style/TimeLineTipText"
                android:layout_alignParentLeft="true"
                android:background="@drawable/bg_timeline_shape"
                android:text="步数"
                android:textColor="@color/timeline_select_color" />

            <TextView
                android:id="@+id/tv_tip_step"
                style="@style/TimeLineTipText"
                android:layout_alignParentLeft="true"
                android:text="步数"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_tip_sleep"
                style="@style/TimeLineTipText"
                android:layout_centerHorizontal="true"
                android:text="睡眠" />

            <TextView
                android:id="@+id/tv_tip_weight"
                style="@style/TimeLineTipText"
                android:layout_alignParentRight="true"
                android:text="体重" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="2月8日 2017" />
    </LinearLayout>
</layout>